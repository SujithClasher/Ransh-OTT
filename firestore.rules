rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // --- NEW SECTIONS ---
    
    // Config: Allow anyone to read (for app languages), only Admin to write (sync)
    match /config/{document=**} {
      allow read: if true;
      allow write: if request.auth != null && (
        request.auth.token.email == 'ssmudakala@gmail.com' ||
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.is_admin == true
      );
    }

    // Plans: Allow anyone to read (to see prices), only Admin to write (sync)
    match /plans/{planId} {
      allow read: if true;
      allow write: if request.auth != null && (
        request.auth.token.email == 'ssmudakala@gmail.com' ||
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.is_admin == true
      );
    }
    
    // --- EXISTING SECTIONS ---

    // Allow anyone to read videos. 
    // Allow write ONLY if you are 'ssmudakala@gmail.com' OR an existing admin.
    match /content/{document=**} {
      allow read: if true;
      allow write: if request.auth != null && (
        request.auth.token.email == 'ssmudakala@gmail.com' ||
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.is_admin == true
      );
    }
    
    // Users collection
    match /users/{userId} {
      // Users can read/write their own document
      allow read, write: if request.auth != null && request.auth.uid == userId;
      
      // Admin can read AND WRITE all user documents (for admin dashboard functions like promoting users)
      allow read, write: if request.auth != null && (
        request.auth.token.email == 'ssmudakala@gmail.com' ||
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.is_admin == true
      );
    }
    
    // Subscriptions collection (for tracking subscription history)
    match /subscriptions/{subId} {
      // Allow authenticated users to create their own subscription records
      allow create: if request.auth != null && 
                       request.resource.data.user_id == request.auth.uid;
      
      // Allow users to read their own subscriptions
      allow read: if request.auth != null && 
                     resource.data.user_id == request.auth.uid;
      
      // Allow admin to read all subscriptions
      allow read: if request.auth != null && (
        request.auth.token.email == 'ssmudakala@gmail.com' ||
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.is_admin == true
      );
    }
  }
}
